{
  "files.autoSave": "afterDelay",
  // "workbench.activityBar.location": "bottom",
  "editor.formatOnSave": true,
  "workbench.sideBar.location": "right",
  "security.workspace.trust.enabled": false,
  "workbench.startupEditor": "none",
  "editor.minimap.enabled": false,
  "editor.fontLigatures": true,
  "workbench.settings.editor": "json",
  "window.commandCenter": false,
  "workbench.editor.showTabs": "none",
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "Liga Meslo LG M DZ",
  "editor.fontSize": 13.5,
  "editor.lineHeight": 1.4,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.accessibilitySupport": "off",
  "extensions.ignoreRecommendations": true,
  "workbench.colorTheme": "Darcula",
  "workbench.tips.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "workbench.colorCustomizations": {
    "gitDecoration.untrackedResourceForeground": "#D5756C",
    "gitDecoration.modifiedResourceForeground": "#6897BB",
    "gitDecoration.ignoredResourceForeground": "#808080",
  },
  "editor.hover.enabled": true,
  "editor.scrollbar.verticalScrollbarSize": 5,
  "editor.scrollbar.horizontalScrollbarSize": 5,
  "editor.cursorStyle": "line-thin",
  "breadcrumbs.enabled": true,
  "workbench.layoutControl.enabled": false,
  "window.titleBarStyle": "native",
  "apc.electron": {
    "titleBarStyle": "hidden"
  },
  "apc.menubar.compact": true,
  "apc.activityBar": {
    "position": "bottom",
    "size": 30,
    "itemMargin": 1
  },
  "apc.header": {
    "height": 28
  },
  "apc.sidebar.titlebar": {
    "height": 28
  },
  "apc.statusBar": {
    "position": "editor-bottom"
  },
  "apc.stylesheet": {},
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.foldfix": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    // Cut
    "<C-x>": false,
    // Paste
    "<C-v>": false,
    "<C-z>": false,
    "<C-y>": false
  },
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "k",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    },
    {
      "before": [
        "<C-j>"
      ],
      "after": [
        "<down>"
      ]
    },
    {
      "before": [
        "<C-k>"
      ],
      "after": [
        "<up>"
      ]
    },
    {
      "before": [
        "<C-h>"
      ],
      "after": [
        "<left>"
      ]
    },
    {
      "before": [
        "<C-l>"
      ],
      "after": [
        "<right>"
      ]
    },
    // Signature in insert mode — Ctrl-S (Simulated as normal-mode binding)
    {
      "before": [
        "<C-s>"
      ],
      "commands": [
        "editor.action.triggerParameterHints"
      ]
    },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d"
      ]
    },
    {
      "before": [
        "<space>",
        "o"
      ],
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditor"
      ]
    },
    // LSP --------------------------------
    // Go to
    {
      "before": [
        "g",
        "d"
      ],
      "commands": [
        "editor.action.revealDefinition"
      ]
    },
    {
      "before": [
        "g",
        "D"
      ],
      "commands": [
        "editor.action.revealDeclaration"
      ]
    },
    {
      "before": [
        "g",
        "t"
      ],
      "commands": [
        "editor.action.goToTypeDefinition"
      ]
    },
    {
      "before": [
        "g",
        "i"
      ],
      "commands": [
        "editor.action.goToImplementation"
      ]
    },
    {
      "before": [
        "g",
        "o"
      ],
      "commands": [
        "editor.action.goToTypeDefinition"
      ]
    },
    {
      "before": [
        "g",
        "r"
      ],
      "commands": [
        "editor.action.referenceSearch.trigger"
      ]
    },
    {
      "before": [
        "g",
        "r",
        "n"
      ],
      "commands": [
        "editor.action.rename"
      ]
    },
    {
      "before": [
        "g",
        "r",
        "a"
      ],
      "commands": [
        "editor.action.quickFix"
      ]
    },
    {
      "before": [
        "g",
        "r",
        "r"
      ],
      "commands": [
        "editor.action.peekReferences"
      ]
    },
    // Hover
    {
      "before": [
        "K"
      ],
      "commands": [
        "editor.action.showHover"
      ]
    },
    // Diagnostics navigation — [d / ]d
    {
      "before": [
        "[",
        "d"
      ],
      "commands": [
        "editor.action.marker.prev"
      ]
    },
    {
      "before": [
        "]",
        "d"
      ],
      "commands": [
        "editor.action.marker.next"
      ]
    },
    // Go to in split (aside)
    {
      "before": [
        "g",
        "s"
      ],
      "commands": [
        "editor.action.revealDefinitionAside"
      ]
    },
    // Symbol search
    {
      "before": [
        "g",
        "O"
      ],
      "commands": [
        "workbench.action.gotoSymbol"
      ]
    },
    {
      "before": [
        "g",
        "W"
      ],
      "commands": [
        "workbench.action.showAllSymbols"
      ]
    },
    // Peek
    {
      "before": [
        "g",
        "p",
        "d"
      ],
      "commands": [
        "editor.action.peekDefinition"
      ]
    },
    {
      "before": [
        "g",
        "p",
        "D"
      ],
      "commands": [
        "editor.action.peekDeclaration"
      ]
    },
    {
      "before": [
        "g",
        "p",
        "t"
      ],
      "commands": [
        "editor.action.peekTypeDefinition"
      ]
    },
    {
      "before": [
        "g",
        "p",
        "i"
      ],
      "commands": [
        "editor.action.peekImplementation"
      ]
    },
    // References
    {
      "before": [
        "g",
        "r"
      ],
      "commands": [
        "editor.action.goToReferences"
      ]
    },
    {
      "before": [
        "g",
        "p",
        "r"
      ],
      "commands": [
        "editor.action.referenceSearch.trigger"
      ]
    },
    {
      "before": [
        "g",
        "."
      ],
      "commands": [
        "editor.action.refactor"
      ]
    },
    {
      "before": [
        "space",
        "f",
        "f"
      ],
      "commands": [
        {
          "command": "periscope.search",
          "when": "editorTextFocus"
        }
      ]
    },
    {
      "before": [
        "H"
      ],
      "after": [
        "0"
      ]
    },
    {
      "before": [
        "L"
      ],
      "after": [
        "$"
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "g",
        "."
      ],
      "commands": [
        "editor.action.refactor"
      ]
    },
    {
      "before": [
        "d"
      ],
      "after": [
        "\"",
        "_",
        "d"
      ]
    }
  ],
  "vscode-bigquery.projects": [],
  "vscode-bigquery.pinned-projects": [],
  "Prettier-SQL.tabSizeOverride": 4,
  // Go settings -------------------------------------------------------------------------------
  "gopls": {
    "ui.semanticTokens": true
  },
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--path-mode=abs",
    "--fast-only"
  ],
  "go.formatTool": "custom",
  "go.alternateTools": {
    "customFormatter": "golangci-lint"
  },
  "go.formatFlags": [
    "fmt",
    "--stdin"
  ],
  "[go]": {
    "editor.formatOnSave": false
  },
  "go.toolsManagement.autoUpdate": true,
  // Java settings -------------------------------------------------------------------------------
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-21",
      "path": "~/.sdkman/candidates/java/21.0.3-amzn",
      "default": true
    },
  ],
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "crash",
}{}